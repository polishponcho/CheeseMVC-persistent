@model CheeseMVC.ViewModels.AddMenuItemViewModel

@{
    ViewBag.Title = "Add Item to Menu: " + Model.Menu.Name;
}

<h1>Add Item</h1>

<form method="post" asp-controller="Menu" asp-action="AddItem">

    <div class="form-group">
        <label asp-for="cheeseID"></label>
        <select asp-for="cheeseID" asp-items="Model.Cheeses"></select>
    </div>
    <div asp-validation-summary="All"></div>

    <input type="hidden" name="MenuID" value="@Model.Menu.ID" />

    <input type="submit" value="Add Item to the Menu" />

</form>
